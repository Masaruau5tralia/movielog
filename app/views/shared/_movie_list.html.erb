<% @movies.each do |movie| %>
  <table border="1">
    <tr>
      <td>タイトル</td>
      <td><%= movie.title %></td>
    </tr>
    <tr>
      <td>説明</td>
      <td><%= movie.description %></td>
    </tr>
    <tr>
      <td>画像URL</td>
      <td><%= movie.image_url %></td>
    </tr>
    <tr>
      <td colspan ='2'>
        <%= link_to '詳細画面へすすむ', movie_path(movie.id) %>
      </td>
    </td>
  </table>
  <br>
<% end %>

