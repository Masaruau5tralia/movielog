<h1>レビュー投稿画面</h1>

<div>
レビュー投稿画面が表示される
</div>

<% if @review.errors.present? %>
<ul>
<% @review.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for [:movie, @review] do |form| %>
<table border="1">
  <tr>
    <td>映画id(仮)</td>
    <td><%= form.text_field :movie_id %></td>
  </tr>
  <tr>
    <td>評価</td>
    <td><%= form.text_field :rate %></td>
  </tr>
  <tr>
    <td>コメント</td>
    <td><%= form.text_field :comment %></td>
  </tr>
  <tr>
    <td>ネタバレ</td>
    <td>
      <%= form.text_field :spoiler_flag %>
    </td>
  </tr>
  <tr>
    <td>ユーザーID(仮)</td>
    <td>
      <%= form.text_field :user_id %>
    </td>
  </tr>
</table>
<p><%= form.submit %></p>
<% end %>

