<h1>Movie Logへようこそ</h1>

<h2>ログイン</h2>
<% if current_user %>
  <p>ログイン中です</p>
  <%= link_to 'ログアウトする', logout_path, :method => :delete %>
<% else %>
  <%= link_to 'ログインする', login_path %>
<% end %>

<h2>映画を検索</h2>
<%= form_tag :search_movie, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<h2>ユーザを検索</h2>
<%= form_tag :search_user, method: :get do %>
<p><%= text_field_tag "q", params[:q] %>
<%= submit_tag "検索" %></p>
<% end %>

<h2>新着の映画</h2>
<h2>人気ランキング</h2>

<h3><%= link_to '登録されている映画一覧へ', movies_path %></h3>
<h3><%= link_to '登録ユーザ一覧', users_path %></h3>
